<div class='col-md-4'>
  <div class='card'>
    <img
      class='card-img-top'
      src='{{this.image_url}}'
      alt='{{this.image_url}}'
    />
    <div class='card-body'>
      <h5 class='card-title'>{{this.name}}</h5>
      <p>{{this.description}}</p>
      <p class='card-text'>{{this.tagline}}</p>
    </div>
  </div>
</div>